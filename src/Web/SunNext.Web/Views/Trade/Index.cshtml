        <td>92%</td>
    </tr>
    <tr>
        <td>2025-07-17 07:00</td>
        <td>Battery Bank 1</td>
        <td><span class="badge bg-warning text-dark">Hold</span></td>
        <td>195.00</td>
        <td>74%</td>
    </tr>
    </tbody>
</table>

<!-- Export buttons -->
<div class="mt-3">
    <button class="btn btn-outline-secondary me-2">Export to CSV</button>
    <button class="btn btn-outline-secondary">Export to Excel</button>
</div>
