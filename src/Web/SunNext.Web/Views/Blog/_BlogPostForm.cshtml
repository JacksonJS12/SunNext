@model SunNext.Web.ViewModels.Blog.BlogPostFormModel


<div class="container py-5">
    <div class="card shadow-lg glass-card p-4">
        <h3 class="mb-4"><i class="bi bi-pencil-square me-2"></i> Create Blog Post</h3>

        <form method="post">
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" placeholder="E.g. Energy Saving Tips for Summer"/>
            </div>

            <div class="mb-3">
                <label for="ContentEditor" class="form-label">Content</label>
                <textarea id="ContentEditor" name="Content" class="form-control">@Model.Content</textarea>
            </div>

            <div class="mb-3">
                <label asp-for="ImagesUrls" class="form-label">Image URLs</label>
                <input asp-for="ImagesUrls" class="form-control"
                       placeholder="https://example.com/img1.jpg|https://example.com/img2.jpg"/>
                <small class="form-text text-muted">
                    Separate URLs with <code>|</code>. Recommended size: <strong>1920Ã—720px</strong>. JPG/WebP
                    preferred.
                </small>
            </div>

            <div class="mb-3">
                <label asp-for="CreatedOn" class="form-label">Created On</label>
                <input asp-for="CreatedOn" type="datetime-local" class="form-control"/>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsPublished" class="form-check-input"/>
                <label asp-for="IsPublished" class="form-check-label">Publish Immediately</label>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">Save</button>
                <a asp-controller="Blog" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

</div>
