@model IList<SunNext.Web.ViewModels.Blog.BlogPostViewModel>

@{
    ViewData["Title"] = "News & Articles";
}

<div class="container py-5">
    <h1 class="text-center fw-bold text-light mb-5 display-6">ðŸ“° Latest News</h1>
    <form method="get" class="mb-5">
        <div class="row g-2 align-items-end">
            <div class="col-md-6">
                <label for="search" class="form-label text-light">Search by Title</label>
                <input type="text" id="search" name="search" value="@Context.Request.Query["search"]"
                       class="form-control bg-dark text-light border-secondary"
                       placeholder="e.g. Solar Batteries, AI, Tips"/>
            </div>

            <div class="col-md-3">
                <label for="date" class="form-label text-light">From Date</label>
                <input type="date" id="date" name="fromDate" value="@Context.Request.Query["fromDate"]"
                       class="form-control bg-dark text-light border-secondary"/>
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-outline-info w-100">
                    <i class="bi bi-funnel me-1"></i> Filter
                </button>
            </div>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var post in Model)
        {
            var image = post.ImagesUrls?.Split('|', StringSplitOptions.RemoveEmptyEntries).FirstOrDefault();
            <div class="col">
                <div
                    class="card bg-dark text-light h-100 shadow glass-card border-0 rounded-4 overflow-hidden news-card">
                    @if (!string.IsNullOrWhiteSpace(image))
                    {
                        <img src="@image" class="card-img-top" alt="Preview Image"
                             style="height: 220px; object-fit: cover;"/>
                    }

                    <div class="card-body d-flex flex-column p-4">
                        <h5 class="fw-semibold mb-2 text-white-50">@post.Title</h5>
                        <p class="small mb-3">@post.CreatedOn.ToString("dd MMM yyyy")</p>

                        <a asp-action="Details" asp-route-id="@post.Id"
                           class="btn btn-outline-info mt-auto fw-semibold rounded-pill px-4 py-2 d-inline-flex align-items-center gap-1 transition">
                            Read More <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style>
    .news-card {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .news-card:hover {
        transform: scale(1.02);
        box-shadow: 0 0 25px rgba(0, 255, 255, 0.08);
    }

    .news-card img {
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .btn-outline-info:hover {
        background-color: #0dcaf0;
        color: #000 !important;
        border-color: #0dcaf0;
    }

</style>