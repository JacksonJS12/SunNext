@model IList<SunNext.Web.ViewModels.Blog.BlogPostViewModel>
@{
    ViewData["Title"] = "Manage Blog Posts";
}

<h2 class="mb-4">üìù Manage Blog Posts</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle me-1"></i> New Blog Post
</a>

<table class="table table-hover shadow-sm rounded">
    <thead class="table-light">
    <tr>
        <th>Title</th>
        <th>Created On</th>
        <th>Published</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    
    @foreach (var post in Model)
    {
        <tr>
            <td class="text-white">@post.Title</td>
            <td class="text-white">@post.CreatedOn.ToString("dd-MM-yyyy")</td>
            <td>
                @if (post.IsPublished)
                {
                    <span class="badge bg-success text-white">Published</span>
                }
                else
                {
                    <span class="badge bg-secondary text-white">Draft</span>
                }
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-sm btn-outline-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>