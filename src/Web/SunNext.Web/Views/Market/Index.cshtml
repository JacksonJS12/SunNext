@{
    ViewData["Title"] = "Trading Recommendations";
}

<div class="container-fluid py-5">
    <div class="text-center mb-5">
        <h2 class="glow-text">üìä Trading Recommendations</h2>
        <p class="">Generated by our AI based on current IBEX spot prices</p>
    </div>

    <form method="get" class="row g-3 align-items-end mb-4 glass-card">
        <div class="col-md-4">
            <label class="form-label text-info">
                <i class="bi bi-hdd-stack-fill me-1"></i>Solar Asset
                <i class="bi bi-info-circle ms-1 " data-bs-toggle="tooltip" title="Select which asset to view recommendations for."></i>
            </label>
            <select class="form-select neon-input">
                <option value="">-- All Assets --</option>
                <option>South PV Field</option>
                <option>Battery Bank 1</option>
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label text-info">
                <i class="bi bi-calendar-event me-1"></i>Date
                <i class="bi bi-info-circle ms-1" data-bs-toggle="tooltip" title="Pick a date to filter recommendations."></i>
            </label>
            <input type="date" class="form-control neon-input" />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary w-100 glow-btn">üîç Filter</button>
        </div>
    </form>

    <div class="glass-card table-responsive mb-4">
        <table class="table table-dark table-hover align-middle">
            <thead class="table-light text-dark">
            <tr>
                <th>Timestamp <i class="bi bi-info-circle ms-1 " data-bs-toggle="tooltip" title="When the recommendation was generated."></i></th>
                <th>Asset <i class="bi bi-info-circle ms-1 d" data-bs-toggle="tooltip" title="Which asset the advice applies to."></i></th>
                <th>Action <i class="bi bi-info-circle ms-1 " data-bs-toggle="tooltip" title="What you should do: Sell, Hold, or Wait."></i></th>
                <th>Target Price (BGN) <i class="bi bi-info-circle ms-1 " data-bs-toggle="tooltip" title="Recommended price to act on."></i></th>
                <th>Confidence <i class="bi bi-info-circle ms-1 " data-bs-toggle="tooltip" title="AI confidence level in this recommendation."></i></th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>2025-07-17 09:00</td>
                <td>South PV Field</td>
                <td><span class="badge bg-success">Sell</span></td>
                <td>203.54</td>
                <td>92%</td>
            </tr>
            <tr>
                <td>2025-07-17 07:00</td>
                <td>Battery Bank 1</td>
                <td><span class="badge bg-warning text-dark">Hold</span></td>
                <td>195.00</td>
                <td>74%</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="text-end">
        <button class="btn btn-outline-light glow-btn me-2">‚¨áÔ∏è Export to CSV</button>
        <button class="btn btn-outline-light glow-btn">‚¨áÔ∏è Export to Excel</button>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => {
            new bootstrap.Tooltip(el);
        });
    </script>
}
