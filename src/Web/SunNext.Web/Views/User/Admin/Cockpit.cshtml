@{
    ViewData["Title"] = "Admin Cockpit";
}

<h2 class="mb-4">ðŸ”§ Admin Control Panel</h2>

<div class="row g-4 text-center">
    <div class="col-md-3">
        <div class="card shadow glass-card border-start border-4 border-primary">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-people fs-2 text-primary mb-2"></i>
                    <h6 class="text-muted">Total Users</h6>
                    <h3 class="fw-bold text-primary">52</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow glass-card border-start border-4 border-success">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-sun fs-2 text-success mb-2"></i>
                    <h6 class="text-muted">Solar Assets</h6>
                    <h3 class="fw-bold text-success">36</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow glass-card border-start border-4 border-warning">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-battery-charging fs-2 text-warning mb-2"></i>
                    <h6 class="text-muted">Active Batteries</h6>
                    <h3 class="fw-bold text-warning">17</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow glass-card border-start border-4 border-danger">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-bar-chart-line fs-2 text-danger mb-2"></i>
                    <h6 class="text-muted">Trade Records</h6>
                    <h3 class="fw-bold text-danger">142</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<hr class="my-4" />

<h4>ðŸ§­ Quick Navigation</h4>
<div class="d-flex flex-wrap gap-3 mb-4">
    <a asp-controller="User" asp-action="AdminUsers" class="btn btn-outline-primary">
        <i class="bi bi-person-gear me-1"></i> Manage Users
    </a>
    <a asp-controller="SolarAsset" asp-action="AdminAll" class="btn btn-outline-success">
        <i class="bi bi-solar-panel me-1"></i> View Solar Assets
    </a>
    <a href="/Dashboard" class="btn btn-outline-info">
        <i class="bi bi-graph-up-arrow me-1"></i> System Dashboard
    </a>
    <a asp-controller="Blog" asp-action="Index" class="btn btn-outline-warning">
        <i class="bi bi-journal-richtext me-1"></i> Manage Blog
    </a>
</div>


@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
