@using Microsoft.AspNetCore.Identity
@using SunNext.Common
@inject SignInManager<SunNext.Data.Models.ApplicationUser> SignInManager
@inject UserManager<SunNext.Data.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Bootstrap Icons (optional but recommended for info/search icons) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            background: linear-gradient(to bottom right, #0e1117, #1c1f26);
            color: #e0e0e0;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
        }

        .glass-container {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 1.25rem;
            padding: 2rem;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
        }

        .glow-btn {
            border-radius: 999px;
            padding: 0.35rem 1rem;
            font-size: 0.85rem;
            border: 1px solid transparent;
            color: #e0e0e0;
            transition: 0.3s ease;
        }

        .glow-btn:hover {
            filter: brightness(120%);
        }

        .btn-details {
            background: rgba(255, 255, 255, 0.1);
            border-color: #6c757d;
        }

        .btn-edit {
            background: linear-gradient(90deg, #0050ef, #00b0ff);
            border-color: transparent;
        }

        .btn-delete {
            background: linear-gradient(90deg, #ff4e50, #f9d423);
            border-color: transparent;
            color: #000;
        }

        .dark-table {
            color: #e0e0e0;
            background-color: transparent;
        }

        .dark-table thead {
            background-color: rgba(255, 255, 255, 0.08);
            color: #a0a0a0;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.05);
            border: none;
            color: #e0e0e0;
        }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.08);
            box-shadow: none;
            color: #fff;
        }

        .search-btn {
            background-color: rgba(255, 255, 255, 0.1);
            color: #00b0ff;
            border: none;
        }

        .bi-info-circle {
            color: #6cb2ff;
        }
    </style>
    <style>
        body {
            background: linear-gradient(to bottom right, #0e1117, #11131f);
            color: #d3d3d3;
        }

        .glass-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 1rem;
            padding: 1.5rem;
            backdrop-filter: blur(20px);
            box-shadow: 0 0 20px rgba(0, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.06);
            transition: all 0.2s ease;
        }

        .glass-card:hover {
            box-shadow: 0 0 25px rgba(0, 255, 255, 0.1);
        }

        .glow-text {
            color: #ffffff;
            text-shadow: 0 0 6px #00bfff, 0 0 12px #00bfff;
        }

        .kpi-card h3 {
            font-weight: 600;
        }

        .card-title {
            color: #89c9ff;
        }
    </style>
    
</head>
<body>
<header>
    <partial name="_Navbar"/>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted mt-5">
    <div class="container">
        &copy; @DateTime.Now.Year - @GlobalConstants.SystemName
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
<script src="~/js/site.min.js" asp-append-version="true"></script>

@RenderSection("Scripts", required: false)
</body>
</html>
