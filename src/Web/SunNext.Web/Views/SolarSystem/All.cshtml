@model SunNext.Web.ViewModels.SolarSystem.AllSolarSystemQueryModel
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SunNext.Common.Enums

@{
    ViewData["Title"] = "Solar Systems Administration";
    var previousPage = Model.CurrentPage - 1;
    var maxPage = (int)Math.Ceiling((double)Model.TotalSolarSystems / Model.SolarSystemsPerPage);
}

<div class="container-fluid py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-white">ðŸ”§ Solar Systems Administration</h2>
        <p class="">Manage all solar systems.</p>
    </div>

    <form method="get" class="mb-4">
        <div class="row g-3 justify-content-between align-items-end">
            <div class="col-md-2">
                <label asp-for="InstallationDateFrom" class="form-label text-light small">From Date</label>
                <input asp-for="InstallationDateFrom"
                       type="date"
                       class="form-control bg-dark text-light border-secondary"/>
            </div>

            <div class="col-md-2">
                <label asp-for="InstallationDateTo" class="form-label text-light small">To Date</label>
                <input asp-for="InstallationDateTo"
                       type="date"
                       class="form-control bg-dark text-light border-secondary"/>
            </div>

            <div class="col-md-2">
                <label asp-for="SolarSystemSorting" class="form-label text-light small">Sort By</label>
                <select asp-for="SolarSystemSorting"
                        class="form-select bg-dark text-light border-secondary">
                    @foreach (var sortOption in Enum.GetValues<SolarSystemSorting>())
                    {
                        var sortName = sortOption.GetType()
                            .GetField(sortOption.ToString())
                            ?.GetCustomAttributes(typeof(DisplayAttribute), false)
                            .Cast<DisplayAttribute>()
                            .FirstOrDefault()
                            ?.Name ?? sortOption.ToString();

                        <option value="@((int)sortOption)" selected="@(Model.SolarSystemSorting == sortOption)">
                            @sortName
                        </option>
                    }

                </select>
            </div>
            <div class="col-md-4">
                <div class="input-group shadow-sm overflow-hidden">
                    <input type="text"
                           name="SearchString"
                           value="@Model.SearchString"
                           class="form-control border-0 px-4 py-2 bg-dark text-light"
                           placeholder="Search by name or location..."/>
                    <button type="submit" class="btn btn-outline-info px-4">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-1">
                <label asp-for="SolarSystemsPerPage" class="form-label text-light small">Per Page</label>
                <select asp-for="SolarSystemsPerPage"
                        class="form-select bg-dark text-light border-secondary">
                    <option value="3">3</option>
                    <option value="6">6</option>
                    <option value="12">12</option>
                    <option value="24">24</option>
                </select>
            </div>
        </div>

        <input type="hidden" asp-for="CurrentPage"/>
    </form>

    <div class="glass-container p-3 rounded-4">
        @if (Model.SolarSystems.Any())
        {
            <div class="table-responsive">
                <table class="table align-middle table-hover table-dark mb-0 rounded">
                    <thead class="table-light text-dark">
                    <tr>
                        <th>System</th>
                        <th class="d-none d-sm-table-cell">Type</th>
                        <th>Status</th>
                        <th>Power</th>
                        <th class="d-none d-md-table-cell">Created</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var system in Model.SolarSystems)
                    {
                        <tr class="custom-hover @(system.IsDeleted ? "table-danger" : "")">
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    <img src="@system.ImageUrl" class="rounded" width="48" height="48"
                                         style="object-fit: cover;" alt="System image"/>
                                    <div>
                                        <strong>@system.Name</strong>
                                        @if (system.IsDeleted)
                                        {
                                            <br>
                                            <small class="text-danger">DELETED</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="d-none d-sm-table-cell">@system.Type</td>
                            <td>
                                @if (system.IsDeleted)
                                {
                                    <span class="badge bg-danger">Deleted</span>
                                }
                                else if (system.IsOnline)
                                {
                                    <span class="badge bg-success">Online</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Offline</span>
                                }
                            </td>
                            <td>@($"{system.PowerKw:F2} kW")</td>
                            <td class="d-none d-md-table-cell">@system.CreatedOn.ToString("dd MM yyyy")</td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2 flex-wrap">

                                    <a asp-action="Details" asp-route-id="@system.Id"
                                       class="btn btn-sm btn-outline-primary rounded-pill">Details</a>
                                    <a asp-action="Edit" asp-route-id="@system.Id"
                                       class="btn btn-sm btn-outline-warning rounded-pill">Edit</a>
                                    <button type="button" class="btn btn-sm btn-outline-danger rounded-pill"
                                            data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@system.Id"
                                            data-name="@system.Name">Delete
                                    </button>

                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>

            @if (maxPage > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link bg-dark border-secondary text-light"
                               asp-action="@(User.IsInRole("Administrator") ? "AdminAll" : "All")"
                               asp-route-currentPage="@(Model.CurrentPage - 1)"
                               asp-route-SolarSystemsPerPage="@Model.SolarSystemsPerPage"
                               asp-route-SearchString="@Model.SearchString"
                               asp-route-InstallationDateFrom="@Model.InstallationDateFrom?.ToString("yyyy-MM-dd")"
                               asp-route-InstallationDateTo="@Model.InstallationDateTo?.ToString("yyyy-MM-dd")"
                               asp-route-SolarSystemSorting="@((int)Model.SolarSystemSorting)">
                                Previous
                            </a>
                        </li>

                        @for (int i = 1; i <= maxPage; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link @(Model.CurrentPage == i ? "bg-info border-info text-white" : "bg-dark border-secondary text-light")"
                                   asp-action="@(User.IsInRole("Administrator") ? "AdminAll" : "All")"
                                   asp-route-currentPage="@i"
                                   asp-route-SolarSystemsPerPage="@Model.SolarSystemsPerPage"
                                   asp-route-SearchString="@Model.SearchString"
                                   asp-route-InstallationDateFrom="@Model.InstallationDateFrom?.ToString("yyyy-MM-dd")"
                                   asp-route-InstallationDateTo="@Model.InstallationDateTo?.ToString("yyyy-MM-dd")"
                                   asp-route-SolarSystemSorting="@((int)Model.SolarSystemSorting)">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == maxPage ? "disabled" : "")">
                            <a class="page-link bg-dark border-secondary text-light"
                               asp-action="@(User.IsInRole("Administrator") ? "AdminAll" : "All")"
                               asp-route-currentPage="@(Model.CurrentPage + 1)"
                               asp-route-SolarSystemsPerPage="@Model.SolarSystemsPerPage"
                               asp-route-SearchString="@Model.SearchString"
                               asp-route-InstallationDateFrom="@Model.InstallationDateFrom?.ToString("yyyy-MM-dd")"
                               asp-route-InstallationDateTo="@Model.InstallationDateTo?.ToString("yyyy-MM-dd")"
                               asp-route-SolarSystemSorting="@((int)Model.SolarSystemSorting)">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            }


            <div class="text-center mt-3">
                <small class="">
                    Showing @((Model.CurrentPage - 1) * Model.SolarSystemsPerPage + 1) to
                    @(Math.Min(Model.CurrentPage * Model.SolarSystemsPerPage, Model.TotalSolarSystems))
                    of @Model.TotalSolarSystems systems
                </small>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-search display-1"></i>
                <h4 class=" mt-3">No solar systems found</h4>
                <p class="">Try adjusting your search criteria.</p>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white border-0">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the system <strong id="deleteAssetName"></strong>?
            </div>
            <div class="modal-footer border-0">
                <form id="deleteForm" method="post">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            document.getElementById('deleteAssetName').textContent = name;
            document.getElementById('deleteForm').action = `/SolarSystem/Delete/${id}`;
        });
    </script>
}