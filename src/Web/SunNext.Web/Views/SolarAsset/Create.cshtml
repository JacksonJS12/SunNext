@{
    ViewData["Title"] = "Create New Asset";
}

<div class="container py-5">
    <div class="glass-card mx-auto" style="max-width: 600px;">
        <h2 class="text-center glow-text mb-4">âš¡ Create New Asset</h2>

        <form method="post">
            <!-- Name -->
            <div class="mb-3">
                <label class="form-label">
                    Name
                    <i class="bi bi-info-circle ms-1 text-info" data-bs-toggle="tooltip"
                       title="Enter a name for your solar asset. E.g. 'North Roof Array'."></i>
                </label>
                <input name="Name" class="form-control neon-input" placeholder="e.g. South PV Field" />
            </div>

            <!-- Type -->
            <div class="mb-3">
                <label class="form-label">
                    Type
                    <i class="bi bi-info-circle ms-1 text-info" data-bs-toggle="tooltip"
                       title="Select the type of the asset, such as solar panel, inverter, or battery."></i>
                </label>
                <select name="Type" class="form-select neon-input">
                    <option disabled selected>-- Select Type --</option>
                    <option>Solar Panel</option>
                    <option>Inverter</option>
                    <option>Battery</option>
                </select>
            </div>

            <!-- Capacity -->
            <div class="mb-3">
                <label class="form-label">
                    Capacity (kW)
                    <i class="bi bi-info-circle ms-1 text-info" data-bs-toggle="tooltip"
                       title="Specify the maximum energy output of the asset in kilowatts."></i>
                </label>
                <input name="Capacity" class="form-control neon-input" placeholder="e.g. 100" />
            </div>

            <!-- Location -->
            <div class="mb-3">
                <label class="form-label">
                    Location
                    <i class="bi bi-info-circle ms-1 text-info" data-bs-toggle="tooltip"
                       title="Location where the asset is physically installed."></i>
                </label>
                <input name="Location" class="form-control neon-input" placeholder="e.g. Sofia" />
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success rounded-pill px-4 glow-btn">ðŸ’¾ Save</button>
                <a href="@Url.Action("Index", "SolarAsset")" class="btn btn-secondary rounded-pill px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
    </script>
}
